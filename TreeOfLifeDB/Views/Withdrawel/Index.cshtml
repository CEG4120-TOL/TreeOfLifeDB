@model IEnumerable<TreeOfLifeDB.Models.Withdrawel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    <p>
        Search Withdrawels: @Html.TextBox("SearchString")
        <input class="btn-primary" type="submit" value="Search" />
    </p>
}

<p>
    @Html.ActionLink("Create New Withdrawel", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <td>
            <strong>Cause</strong>
        </td>
        <th>
            ID
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date, "{0:MM/dd/yyyy}")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cause.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.causeID)
        </td>
        <td>
            <!--@Html.ActionLink("Edit", "Edit", new { id=item.TransactionID }) |-->
            @Html.ActionLink("Details", "Details", new { id=item.TransactionID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TransactionID })
        </td>
    </tr>
}

</table>
